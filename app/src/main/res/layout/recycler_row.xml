<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="100dp" >

    <ImageView
            android:layout_width="150dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/listImage"
            android:scaleType="fitCenter"
            tools:ignore="VectorDrawableCompat" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="예시 텍스트"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/listText"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/listImage"
            app:layout_constrainedWidth="true"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/rowCheckButton" android:layout_marginRight="8dp"/>
    <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rowCheckButton"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>